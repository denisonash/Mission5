@{
    ViewData["Title"] = "Delete Movie";
}

@model NewMovie

<h2>Are you sure you want to delete @Model.Title?</h2>
<h4>Once completed, this action cannot be undone.</h4>

<form method="post">
    <button type="submit" asp-controller="Home" asp-action="Delete" class="btn btn-default" style="border:thin">Delete</button>
    <button type="submit" asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</button>

    <input type="hidden" asp-for="MovieID" />
</form>
